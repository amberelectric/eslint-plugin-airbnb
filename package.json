{
  "name": "@amberelectric/eslint-plugin-amber",
  "version": "1.0.0",
  "description": "Amber's ESLint plugin with flat config support for ESLint v9, inspired by Airbnb's style guide",
  "main": "index.js",
  "exports": {
    ".": "./index.js",
    "./base": "./base.js",
    "./hooks": "./hooks.js",
    "./legacy": "./legacy.js",
    "./whitespace": "./whitespace.js",
    "./configs/*": "./configs/*.js",
    "./rules/*": "./rules/*.js",
    "./package.json": "./package.json"
  },
  "scripts": {
    "lint": "eslint .",
    "prepublishOnly": "safe-publish-latest",
    "prepublish": "not-in-publish || npm run prepublishOnly",
    "pretest": "npm run --silent lint",
    "link:eslint": "cd node_modules/eslint && npm link --production && cd -"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/amberelectric/eslint-plugin-amber"
  },
  "keywords": [
    "eslint",
    "eslintplugin",
    "eslint-plugin",
    "eslintconfig",
    "config",
    "javascript",
    "styleguide",
    "react",
    "jsx",
    "es6",
    "es2015",
    "es2016",
    "es2017",
    "es2018",
    "flat-config",
    "amber"
  ],
  "author": "Rudy Perottoni @ Amber Electric",
  "license": "MIT",
  "homepage": "https://github.com/amberelectric/eslint-plugin-amber",
  "dependencies": {
    "confusing-browser-globals": "^1.0.11"
  },
  "devDependencies": {
    "eslint": ">= 9",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-jsx-a11y": "6.10.2",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-react-hooks": "7.0.1",
    "globals": "^15.13.0",
    "in-publish": "^2.0.1",
    "react": "19.2.0",
    "safe-publish-latest": "2.0.0"
  },
  "peerDependencies": {
    "eslint": ">= 9",
    "eslint-plugin-import": ">= 2.32.0",
    "eslint-plugin-jsx-a11y": ">= 6",
    "eslint-plugin-react": ">= 7",
    "eslint-plugin-react-hooks": ">= 7"
  },
  "engines": {
    "node": ">= 20"
  }
}
